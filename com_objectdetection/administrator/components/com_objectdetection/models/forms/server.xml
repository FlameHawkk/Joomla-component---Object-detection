<?xml version="1.0" encoding="utf-8"?>
<form>
    <field
        name="server_name"
        type="text"
        label="COM_OBJECTDETECTION_SERVER_NAME_LABEL"
        description="COM_OBJECTDETECTION_SERVER_NAME_DESC"
        required="true"
        size="40"
        class="inputbox"
    />

    <field
        name="server_url"
        type="url"
        label="COM_OBJECTDETECTION_SERVER_URL_LABEL"
        description="COM_OBJECTDETECTION_SERVER_URL_DESC"
        required="true"
        size="60"
        default="https://yolo-api-d44x.onrender.com"
        class="inputbox"
        filter="url"
    />

    <field
        name="model_name"
        type="text"
        label="COM_OBJECTDETECTION_MODEL_NAME_LABEL"
        description="COM_OBJECTDETECTION_MODEL_NAME_DESC"
        required="true"
        size="30"
        default="yolov8n"
        class="inputbox"
        hint="yolov8n, yolov10n, yolov11s, custom etc."
    />

    <field
        name="max_file_size"
        type="number"
        label="COM_OBJECTDETECTION_MAX_FILE_SIZE_LABEL"
        description="COM_OBJECTDETECTION_MAX_FILE_SIZE_DESC"
        default="10"
        min="1"
        max="50"
        required="true"
        class="inputbox"
    />

    <field
        name="timeout"
        type="number"
        label="COM_OBJECTDETECTION_TIMEOUT_LABEL"
        description="COM_OBJECTDETECTION_TIMEOUT_DESC"
        default="120"
        min="30"
        max="300"
        required="true"
        class="inputbox"
    />

    <field
        name="default_confidence"
        type="number"
        label="COM_OBJECTDETECTION_DEFAULT_CONFIDENCE_LABEL"
        description="COM_OBJECTDETECTION_DEFAULT_CONFIDENCE_DESC"
        default="0.5"
        min="0.1"
        max="0.9"
        step="0.1"
        required="true"
        class="inputbox"
    />

    <field
        name="detection_language"
        type="list"
        label="COM_OBJECTDETECTION_LANGUAGE_LABEL"
        description="COM_OBJECTDETECTION_LANGUAGE_DESC"
        default="en"
        class="inputbox"
    >
        <option value="en">English</option>
        <option value="ru">Russian</option>
    </field>

    <field
        name="is_active"
        type="radio"
        label="COM_OBJECTDETECTION_SERVER_ACTIVE_LABEL"
        description="COM_OBJECTDETECTION_SERVER_ACTIVE_DESC"
        default="1"
        class="btn-group"
    >
        <option value="0">JNO</option>
        <option value="1">JYES</option>
    </field>
</form>